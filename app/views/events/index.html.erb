<div class="container">
  <form class="form-inline searchbar justify-content-center">
 
      <%= simple_form_for :search, url: events_path, method: "GET", input_html: { class: 'form-block' } do |f| %>
       
          <div>
            <%= f.input :sport, input_html: { placeholder: "Type your sport" }, label:false %>
          </div>
          <div>
            <%= f.input :date, as: :string, placeholder: "Pick a date", required: false, input_html: {class: "datepicker form-data"}, label:false %>
          </div>
          <div>
            <%= f.input :level, label:false, prompt: 'level', collection: Event.levels.map{ |l| [l.first, l.second] }, required: false, label_method: :first, value_method: :second%>
          </div>
          <div>
            <%= f.input :location, label:false, required: false, placeholder: 'Enter a location for your event' %>
          </div>
          <div class="form-button">
            <%= f.button :submit, 'Search', class: "btn btn-primary" %>
          </div>
      <% end %>
   
    
  </form>

