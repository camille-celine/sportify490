                      <% else %>
                        <p><%= event.bookings.count + 1 %> / <%= event.capacity %> </p>
                      <% end %>
                    </div>
                    -->
                </div>
              </div>
            </div>
          <% end %>
        <!--      </div> -->
      </div>
      <div class="col-12 col-lg-5">
        <div id="showmap"
           style="width: 100%; height: 100vh;"
           data-marker="<%= @marker.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
